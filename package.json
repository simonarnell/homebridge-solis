{
  "name": "homebridge-solis",
  "version": "0.0.1",
  "description": "A homebridge plugin that collects solar panel generation data from Solis PV inverters and publishes to the HomeKit system.",
  "main": "dist/accessory.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "rimraf ./dist && tsc",
    "postpublish": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.0.0"
  },
  "dependencies": {
    "solis-inverter": "git@github.com:fss/solis-inverter.git"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.13.0",
    "homebridge": "^1.2.3",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "files": [
    "LICENSE",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonarnell/homebridge-solis.git"
  },
  "keywords": [
    "homebridge-plugin",
    "solis",
    "pv",
    "homekit"
  ],
  "author": "Simon Arnell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonarnell/homebridge-solis/issues"
  },
  "homepage": "https://github.com/simonarnell/homebridge-solis#readme"
}
